@model ModelEntity.Student
@{
    ViewBag.Title = "Create new student";
}

<div class="well well-sm text-primary text-center">
    @ViewBag.msgStart
</div> 
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Last_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Last_name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cellphone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Cellphone, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            </div>
        </div>
    </fieldset>
    <div class="form-actions  col-md-offset-2">
        <input class="btn btn-primary" type="submit" name="btnsave" value="Save" /> |
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>
}
<div>
    @ViewBag.msgError
</div>
<div>
    @ViewBag.msgSuccess;
</div>
